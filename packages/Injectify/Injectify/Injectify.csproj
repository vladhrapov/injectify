<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.3.0</Version>
    <Company>-</Company>
    <Product>Injectify</Product>
    <Description>Dependency injection and startup common implementations and helpers for UWP applications.</Description>
    <Authors>Vladyslav Khrapov</Authors>
    <RepositoryUrl>https://github.com/vladhrapov/uwp-dependency-injection</RepositoryUrl>
    <AssemblyVersion>0.3.0.0</AssemblyVersion>
    <FileVersion>0.3.0.0</FileVersion>
    <PackageTags>UWP; DI; Dependency Injection;</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Injectify.Abstractions" Version="[0.3.0]" />
  </ItemGroup>

</Project>
